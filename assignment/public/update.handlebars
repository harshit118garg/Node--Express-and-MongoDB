<div class="flex-1 flex flex-col items-center bg-indigo-100">
  <div class="p-5 lg:p-2 mt-4 flex justify-center items-center">
    <a
      href="/"
      class="bg-blue-500 hover:bg-green-400 text-white hover:text-black transition duration-300 px-3 py-1 inline-block rounded"
    >
      Back to Task List
    </a>
  </div>
  <div class="w-9/12 m-auto bg-white rounded-md p-6 shadow-md">
    <h2 class="text-2xl font-semibold mb-4">{{title}}</h2>
    {{#if task}}
    <form
      method="POST"
      action="/update/{{task.taskID}}"
      enctype="application/x-www-form-urlencoded"
    >
      <div class="mb-4">
        <label
          for="title"
          class="block text-gray-700 text-sm font-bold mb-2"
        >Title:</label>
        <input
          type="text"
          id="title"
          name="title"
          value="{{task.title}}"
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500"
        />
      </div>

      <div class="mb-4">
        <label
          for="description"
          class="block text-gray-700 text-sm font-bold mb-2"
        >Description:</label>
        <textarea
          id="description"
          name="description"
          rows="4"
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:border-blue-500"
        >{{task.description}}</textarea>
      </div>

      <button
        type="submit"
        class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600"
      >Add Task</button>
    </form>
    {{/if}}
  </div>
</div>